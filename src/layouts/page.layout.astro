---
import BaseLayout from "@/layouts/base.layout.astro";

import { HeaderNavigation } from "@/components/ui/header-navigation";
import { Image } from "astro:assets";
import ScoutsLogo from "../media/scouts-logo.png";

import { navigation } from "../lib/navigation";
import { Container } from "@/components/ui/container";
import Breadcrumbs from "../components/widgets/breadcrumbs.astro";
import Footer from "../components/widgets/footer.astro";

const currentPath = "/aeasd";

interface Props {
  title: string;
}

const { title } = Astro.props.frontmatter || Astro.props;
---

<BaseLayout title={title}>
  <HeaderNavigation client:load links={navigation} currentPath={currentPath}>
    <Image src={ScoutsLogo} height={32} loading={"eager"} alt="Scouts logo" />
  </HeaderNavigation>

  <Breadcrumbs />

  <Container>
    <slot />
  </Container>

  <Footer />

</BaseLayout>
